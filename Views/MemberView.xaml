<UserControl x:Class="SitarLib.Views.MemberView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SitarLib.Views"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#3498db" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="SitarLib" FontSize="22" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text=" | Member Management" FontSize="22" Foreground="White"/>
                </StackPanel>
                
                <Button Grid.Column="1" 
                        Content="Back to Dashboard" 
                        Command="{Binding NavigateToDashboardCommand}"
                        Padding="15,5"
                        Background="#2980b9"
                        Foreground="White"
                        BorderThickness="0"/>
            </Grid>
        </Border>
        
        <!-- Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>
            
            <!-- Member List -->
            <Border Grid.Column="0" 
                    Background="White" 
                    BorderBrush="#DDD" 
                    BorderThickness="1" 
                    CornerRadius="5" 
                    Margin="0,0,10,0">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox Grid.Column="0" 
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="5"
                                 Margin="0,0,10,0"
                                 BorderBrush="#DDD"
                                 BorderThickness="1"/>
                        
                        <Button Grid.Column="1" 
                                Content="Search" 
                                Padding="15,5"
                                Background="#3498db"
                                Foreground="White"
                                BorderThickness="0"/>
                    </Grid>
                    
                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding Members}" 
                              SelectedItem="{Binding SelectedMember}"
                              AutoGenerateColumns="False" 
                              IsReadOnly="True" 
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserReorderColumns="False"
                              CanUserResizeRows="False"
                              CanUserSortColumns="True"
                              HeadersVisibility="Column"
                              BorderThickness="1"
                              GridLinesVisibility="All"
                              AlternatingRowBackground="#F9F9F9">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                            <DataGridTextColumn Header="Member Code" Binding="{Binding MemberCode}" Width="Auto"/>
                            <DataGridTextColumn Header="Full Name" Binding="{Binding FullName}" Width="*"/>
                            <DataGridTextColumn Header="Phone" Binding="{Binding PhoneNumber}" Width="Auto"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                            <DataGridTextColumn Header="Expiry Date" Binding="{Binding MembershipExpiry, StringFormat=d}" Width="Auto"/>
                            <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsActive}" Width="Auto"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
            
            <!-- Member Form -->
            <Border Grid.Column="1" 
                    Background="White" 
                    BorderBrush="#DDD" 
                    BorderThickness="1" 
                    CornerRadius="5" 
                    Margin="10,0,0,0">
                <ScrollViewer Margin="15" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="{Binding IsEditing, Converter={StaticResource BooleanToStringConverter}, ConverterParameter='Edit Member;Add New Member'}" 
                                  FontWeight="Bold" 
                                  FontSize="16"
                                  Margin="0,0,0,15"/>
                        
                        <TextBlock Text="Member Code" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding CurrentMember.MemberCode, UpdateSourceTrigger=PropertyChanged}" 
                                Padding="5" 
                                IsReadOnly="{Binding IsEditing}"
                                Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Full Name" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding CurrentMember.FullName, UpdateSourceTrigger=PropertyChanged}" 
                                Padding="5" 
                                Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Address" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding CurrentMember.Address, UpdateSourceTrigger=PropertyChanged}" 
                                Padding="5" 
                                Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Phone Number" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding CurrentMember.PhoneNumber, UpdateSourceTrigger=PropertyChanged}" 
                                Padding="5" 
                                Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Email" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding CurrentMember.Email, UpdateSourceTrigger=PropertyChanged}" 
                                Padding="5" 
                                Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Membership Expiry" Margin="0,0,0,5"/>
                        <DatePicker SelectedDate="{Binding CurrentMember.MembershipExpiry}" 
                                    Margin="0,0,0,10"/>
                        
                        <CheckBox Content="Is Active" 
                                  IsChecked="{Binding CurrentMember.IsActive}"
                                  Margin="0,0,0,20"/>
                        
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button Content="Cancel" 
                                    Command="{Binding CancelCommand}"
                                    Padding="15,5" 
                                    Margin="0,0,10,0"
                                    Background="#AAA"
                                    Foreground="White"
                                    BorderThickness="0"/>
                            
                            <Button Content="Delete" 
                                    Command="{Binding DeleteCommand}"
                                    Padding="15,5" 
                                    Margin="0,0,10,0"
                                    Background="#e74c3c"
                                    Foreground="White"
                                    BorderThickness="0"/>
                            
                            <Button Content="Save" 
                                    Command="{Binding SaveCommand}"
                                    Padding="15,5"
                                    Background="#2ecc71"
                                    Foreground="White"
                                    BorderThickness="0"/>
                        </StackPanel>
                        
                        <Button Content="Add New" 
                                Command="{Binding AddNewCommand}"
                                Padding="15,5"
                                Margin="0,15,0,0"
                                Background="#3498db"
                                Foreground="White"
                                BorderThickness="0"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>