<Window x:Class="SitarLib.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:SitarLib.Views"
        mc:Ignorable="d" 
        Title="Login - SitarLib"
        Height="550" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Blue Welcome Section -->
        <Grid Grid.Column="0" Background="#1E88E5">
            <StackPanel VerticalAlignment="Center" Margin="40">
                <TextBlock Text="Welcome to" 
                           FontSize="28" 
                           FontWeight="Light"
                           Foreground="White"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="SitarLib" 
                           FontSize="48" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,10"/>

                <TextBlock Text="Library Management System" 
                           FontSize="22" 
                           FontWeight="Medium"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,40"/>

                <Border Width="120" 
                        Height="5" 
                        Background="White" 
                        CornerRadius="2.5"
                        Margin="0,0,0,40"/>

                <TextBlock Text="Your complete solution for efficient library resource management"
                           FontSize="16"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           FontWeight="Light"
                           Foreground="White"
                           Opacity="0.9"/>
            </StackPanel>
        </Grid>
        

        <!-- Right Panel - Login Form -->
        <Grid Grid.Column="1" Background="#F5F5F5">
            <StackPanel Width="350" VerticalAlignment="Center">
                <TextBlock Text="Login" 
                           FontSize="32" 
                           FontWeight="SemiBold" 
                           HorizontalAlignment="Center"
                           Foreground="#333333"
                           Margin="0,0,0,40"/>

                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="30,25" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="2" Direction="270" Color="Black" Opacity="0.2" BlurRadius="5"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="Username" 
                                   FontWeight="Medium"
                                   Margin="0,0,0,8"/>
                        <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="10" 
                                 FontSize="14"
                                 Margin="0,0,0,20"/>

                        <TextBlock Text="Password" 
                                   FontWeight="Medium"
                                   Margin="0,0,0,8"/>
                        <PasswordBox x:Name="PasswordBox" 
                                     Padding="10" 
                                     FontSize="14"
                                     Margin="0,0,0,25"/>

                        <Button Content="Login" 
                                Command="{Binding LoginCommand}"
                                Background="#1E88E5" 
                                Foreground="White" 
                                FontSize="14"
                                FontWeight="SemiBold"
                                Padding="15,10" 
                                Height="45"
                                BorderThickness="0"
                                Cursor="Hand"/>

                        <TextBlock Text="{Binding ErrorMessage}" 
                                   Foreground="#F44336" 
                                   FontWeight="Medium"
                                   Margin="0,15,0,0" 
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <TextBlock Text="© 2025 SitarLib - All Rights Reserved" 
                           FontSize="12" 
                           HorizontalAlignment="Center"
                           Foreground="#777777"
                           Margin="0,30,0,0"/>
            </StackPanel>

            <!-- Loading Overlay -->
            <Grid Background="#80000000" Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
                    <ProgressBar IsIndeterminate="True" Width="150" Height="20"/>
                    <TextBlock Text="Logging in, please wait..." Foreground="White" Margin="0,10,0,0" HorizontalAlignment="Center" FontSize="14" FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
