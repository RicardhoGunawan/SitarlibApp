<UserControl x:Class="SitarLib.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SitarLib.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Background="#F5F5F5">
        <StackPanel Width="350" VerticalAlignment="Center">
            <TextBlock Text="SitarLib" 
                       FontSize="36" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Foreground="#3498db"
                       Margin="0,0,0,30"/>
            
            <TextBlock Text="Library Management System" 
                       FontSize="18" 
                       HorizontalAlignment="Center"
                       Foreground="#555"
                       Margin="0,0,0,50"/>
            
            <Border Background="White" 
                    CornerRadius="5" 
                    Padding="20" 
                    BorderBrush="#DDD" 
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Username" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="8" 
                             Margin="0,0,0,15"/>
                    
                    <TextBlock Text="Password" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="PasswordBox" 
                                 Padding="8" 
                                 Margin="0,0,0,25"/>
                    
                    <Button Content="Login" 
                            Command="{Binding LoginCommand}"
                            Background="#3498db" 
                            Foreground="White" 
                            Padding="10" 
                            BorderThickness="0"/>
                    
                    <TextBlock Text="{Binding ErrorMessage}" 
                               Foreground="Red" 
                               Margin="0,10,0,0" 
                               TextWrapping="Wrap"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <TextBlock Text="© 2025 SitarLib - All Rights Reserved" 
                       FontSize="12" 
                       HorizontalAlignment="Center"
                       Foreground="#777"
                       Margin="0,30,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>