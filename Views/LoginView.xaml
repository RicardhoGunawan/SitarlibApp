<Window x:Class="SitarLib.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:SitarLib.Views"
        mc:Ignorable="d" 
        Title="Login - SitarLib"
        Height="800" 
        Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Blue Welcome Section with Gradient -->
        <Grid Grid.Column="0">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#1565C0" Offset="0.0"/>
                    <GradientStop Color="#1E88E5" Offset="1.0"/>
                </LinearGradientBrush>
            </Grid.Background>
            
            <!-- Subtle pattern overlay -->
            <Image Source="/Assets/pattern.png" Opacity="0.08" Stretch="UniformToFill"/>
            
            <StackPanel VerticalAlignment="Center" Margin="40" HorizontalAlignment="Center">
                <!-- Logo with subtle shadow effect -->
                <Border CornerRadius="50" Background="White" Width="110" Height="110" Margin="0,0,0,20" Opacity="0.95">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="2" BlurRadius="5" Color="#222222" Opacity="0.25"/>
                    </Border.Effect>
                    <Image Source="/Assets/logo.png"
                           Width="90" Height="90"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>

                </Border>

                <TextBlock Text="Selamat Datang" 
                           FontSize="28" 
                           FontWeight="Light"
                           Foreground="White"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="SitarLib" 
                           FontSize="50" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,10">
                    <TextBlock.Effect>
                        <DropShadowEffect ShadowDepth="1" BlurRadius="3" Color="#222222" Opacity="0.3"/>
                    </TextBlock.Effect>
                </TextBlock>

                <TextBlock Text="Sistem Manajemen Perpustakaan" 
                           FontSize="22" 
                           FontWeight="Medium"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <Border Width="130" 
                        Height="4" 
                        Background="White" 
                        CornerRadius="2"
                        Opacity="0.85"
                        Margin="0,0,0,30"/>

                <TextBlock Text="Solusi lengkap Anda untuk manajemen sumber daya perpustakaan yang efisien"
                           FontSize="16"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           FontWeight="Light"
                           Foreground="White"
                           Opacity="0.95"
                           MaxWidth="380"/>
                           
                <!-- Features list with WPF compatible icons -->
                <StackPanel Margin="0,40,0,0">
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="✓" 
                                  Foreground="White" 
                                  FontSize="18"
                                  Margin="0,0,15,0"
                                  VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" 
                                   Text="Manajemen buku dan katalogisasi yang mudah" 
                                   Foreground="White" 
                                   FontSize="14" 
                                   VerticalAlignment="Center"/>
                    </Grid>
                    
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="✓" 
                                  Foreground="White" 
                                  FontSize="18"
                                  Margin="0,0,15,0"
                                  VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" 
                                   Text="Peminjaman dan pengembalian yang lancar" 
                                   Foreground="White" 
                                   FontSize="14" 
                                   VerticalAlignment="Center"/>
                    </Grid>
                    
                    <Grid Margin="0,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="✓" 
                                  Foreground="White" 
                                  FontSize="18"
                                  Margin="0,0,15,0"
                                  VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1" 
                                   Text="Pelacakan secara real-time" 
                                   Foreground="White" 
                                   FontSize="14" 
                                   VerticalAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </Grid>

        <!-- Right Panel - Login Form -->
        <Grid Grid.Column="1" Background="#F5F5F5">
            <!-- Subtle background pattern -->
            <Image Source="/Assets/light-pattern.png" Opacity="0.07" Stretch="UniformToFill"/>

            <StackPanel Width="380" VerticalAlignment="Center">
                <TextBlock Text="Masuk ke Akun Anda" 
                           FontSize="32" 
                           FontWeight="SemiBold" 
                           HorizontalAlignment="Center"
                           Foreground="#333333"
                           Margin="0,0,0,40"/>

                <Border Background="White" 
                        CornerRadius="12" 
                        Padding="35" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="0" Direction="0" Color="#1E88E5" Opacity="0.1" BlurRadius="20"/>
                    </Border.Effect>
                    <StackPanel>
                        <!-- Header -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Selamat Datang kembali" 
                                       FontWeight="Bold"
                                       Foreground="#333333"
                                       FontSize="22"
                                       Margin="0,0,0,4"/>
                            <TextBlock Text="Silakan masukkan kredensial Anda"
                                       Foreground="#666666"
                                       FontSize="14"/>
                        </StackPanel>

                        <!-- Username Field -->
                        <StackPanel Margin="0,0,0,20">
                            <TextBlock Text="Username" 
                                       FontWeight="SemiBold"
                                       Foreground="#444444"
                                       FontSize="14"
                                       Margin="0,0,0,8"/>
                                           
                           <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Icon -->
                                <Border Background="#F5F5F5" 
                                        Width="40" 
                                        Height="40"
                                        CornerRadius="6,0,0,6"
                                        VerticalAlignment="Stretch">
                                    <TextBlock Text="👤" 
                                               FontSize="16"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>

                                <!-- TextBox -->
                                <TextBox x:Name="UsernameTextBox"
                                         Grid.Column="1"
                                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                                         FontSize="14"
                                         BorderThickness="1"
                                         BorderBrush="#E0E0E0"
                                         Background="#FAFAFA"
                                         VerticalContentAlignment="Center"
                                         Padding="5,0,0,0"> <!-- default padding supaya placeholder dan teks awal sejajar -->
                                    <TextBox.Style>
                                        <Style TargetType="{x:Type TextBox}">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type TextBox}">
                                                        <Border x:Name="border" 
                                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                                BorderThickness="{TemplateBinding BorderThickness}" 
                                                                Background="{TemplateBinding Background}" 
                                                                SnapsToDevicePixels="True">
                                                            <ScrollViewer x:Name="PART_ContentHost" 
                                                                          Focusable="False" 
                                                                          HorizontalScrollBarVisibility="Hidden" 
                                                                          VerticalScrollBarVisibility="Hidden"
                                                                          Margin="{TemplateBinding Padding}"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="true">
                                                                <Setter Property="BorderBrush" TargetName="border" Value="#1E88E5"/>
                                                            </Trigger>
                                                            <Trigger Property="IsFocused" Value="true">
                                                                <Setter Property="BorderBrush" TargetName="border" Value="#1E88E5"/>
                                                                <Setter Property="Background" TargetName="border" Value="#FFFFFF"/>
                                                                <Setter Property="Padding" Value="0,0,0,0"/> <!-- padding kiri jadi 0 saat fokus -->
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>

                                <!-- Placeholder -->
                                <TextBlock Grid.Column="1" 
                                           IsHitTestVisible="False"
                                           VerticalAlignment="Center" 
                                           HorizontalAlignment="Left" 
                                           Margin="12,0,0,0" 
                                           Foreground="#AAAAAA" 
                                           FontSize="14"
                                           Text="Enter your username">
                                    <TextBlock.Style>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Text, ElementName=UsernameTextBox}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>

                        </StackPanel>

                        <!-- Password Field -->
                        <StackPanel Margin="0,0,0,25">
                            <TextBlock Text="Password" 
                                       FontWeight="SemiBold"
                                       Foreground="#444444"
                                       FontSize="14"
                                       Margin="0,0,0,8"/>
                                           
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Icon -->
                                <Border Background="#F5F5F5" 
                                        Width="40" 
                                        Height="40"
                                        CornerRadius="6,0,0,6"
                                        VerticalAlignment="Stretch">
                                    <TextBlock Text="🔒" 
                                               FontSize="16"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>

                                <!-- PasswordBox -->
                                <PasswordBox x:Name="PasswordBox"
                                             Grid.Column="1"
                                             FontSize="14"
                                             PasswordChanged="PasswordBox_PasswordChanged"
                                             BorderThickness="1"
                                             BorderBrush="#E0E0E0"
                                             Background="#FAFAFA"
                                             VerticalContentAlignment="Center"
                                             Padding="5,0,0,0">
                                    <PasswordBox.Style>
                                        <Style TargetType="{x:Type PasswordBox}">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type PasswordBox}">
                                                        <Border x:Name="border" 
                                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                                BorderThickness="{TemplateBinding BorderThickness}" 
                                                                Background="{TemplateBinding Background}" 
                                                                SnapsToDevicePixels="True">
                                                            <ScrollViewer x:Name="PART_ContentHost" 
                                                                          Focusable="False" 
                                                                          HorizontalScrollBarVisibility="Hidden" 
                                                                          VerticalScrollBarVisibility="Hidden"
                                                                          Margin="{TemplateBinding Padding}"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="true">
                                                                <Setter Property="BorderBrush" TargetName="border" Value="#1E88E5"/>
                                                            </Trigger>
                                                            <Trigger Property="IsFocused" Value="true">
                                                                <Setter Property="BorderBrush" TargetName="border" Value="#1E88E5"/>
                                                                <Setter Property="Background" TargetName="border" Value="#FFFFFF"/>
                                                                <Setter Property="Padding" Value="0,0,0,0"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </PasswordBox.Style>
                                </PasswordBox>

                                <!-- Password Placeholder -->
                                <TextBlock x:Name="PasswordPlaceholder"
                                           Grid.Column="1" 
                                           IsHitTestVisible="False"
                                           VerticalAlignment="Center" 
                                           HorizontalAlignment="Left" 
                                           Margin="12,0,0,0" 
                                           Foreground="#AAAAAA" 
                                           FontSize="14"
                                           Text="Enter your password">
                                    <TextBlock.Style>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Password, ElementName=PasswordBox}" Value="">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>

                        </StackPanel>

                        <!-- Login Button -->
                        <Button Content="Masuk" 
                                Command="{Binding LoginCommand}"
                                CommandParameter="{Binding ElementName=PasswordBox}"
                                Padding="15,0" 
                                Height="48"
                                Cursor="Hand"
                                Margin="0,0,0,15">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Background" Value="#1E88E5"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontSize" Value="15"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border x:Name="border"
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Center"
                                                                     VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" TargetName="border" Value="#1565C0"/>
                                                        <Setter Property="Effect" TargetName="border">
                                                            <Setter.Value>
                                                                <DropShadowEffect ShadowDepth="2" Direction="270" Color="#1565C0" Opacity="0.4" BlurRadius="8"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" TargetName="border" Value="#0D47A1"/>
                                                        <Setter Property="Effect" TargetName="border">
                                                            <Setter.Value>
                                                                <DropShadowEffect ShadowDepth="1" Direction="270" Color="#1565C0" Opacity="0.2" BlurRadius="4"/>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Error Message -->
                        <TextBlock Text="{Binding ErrorMessage}" 
                                   Foreground="#F44336" 
                                   FontWeight="Medium"
                                   Margin="0,0,0,15" 
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Footer with Copyright and Help -->
                <Grid Margin="0,30,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="© 2025 SitarLib - All Rights Reserved" 
                               FontSize="12" 
                               HorizontalAlignment="Left"
                               Foreground="#777777"
                               VerticalAlignment="Center"/>
                               
                </Grid>
            </StackPanel>

            <!-- Loading Overlay with WPF Compatible Progress Bar -->
            <Grid Background="#90000000" Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Border Background="#FFFFFF" 
                        CornerRadius="10" 
                        Width="250" 
                        Height="140"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                    <Border.Effect>
                        <DropShadowEffect ShadowDepth="3" Direction="270" Color="Black" Opacity="0.2" BlurRadius="10"/>
                    </Border.Effect>
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <!-- WPF compatible circular ProgressBar -->
                        <ProgressBar IsIndeterminate="True" 
                                     Width="40" 
                                     Height="40"
                                     Foreground="#1E88E5" 
                                     Margin="0,0,0,15">
                            <ProgressBar.Style>
                                <Style TargetType="{x:Type ProgressBar}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type ProgressBar}">
                                                <Border BorderBrush="Transparent" 
                                                        BorderThickness="0" 
                                                        Background="Transparent" 
                                                        CornerRadius="20">
                                                    <Grid> <!-- Ini solusi untuk menampung lebih dari satu child -->
                                                        <Ellipse x:Name="PART_Track" 
                                                                 StrokeThickness="4" 
                                                                 Stroke="#E0E0E0" 
                                                                 Fill="Transparent"/>
                                                        <Ellipse x:Name="PART_Indicator" 
                                                                 StrokeThickness="4" 
                                                                 Stroke="#1E88E5" 
                                                                 Fill="Transparent"
                                                                 StrokeDashArray="0,100"
                                                                 RenderTransformOrigin="0.5,0.5">
                                                            <Ellipse.RenderTransform>
                                                                <RotateTransform x:Name="RotateTransform" Angle="0"/>
                                                            </Ellipse.RenderTransform>
                                                        </Ellipse>
                                                    </Grid>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsIndeterminate" Value="true">
                                                        <Setter Property="StrokeDashArray" TargetName="PART_Indicator" Value="20,80"/>
                                                        <Trigger.EnterActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <DoubleAnimation Storyboard.TargetName="RotateTransform" 
                                                                                  Storyboard.TargetProperty="Angle"
                                                                                  From="0" To="360" Duration="0:0:2"
                                                                                  RepeatBehavior="Forever" />
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </Trigger.EnterActions>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ProgressBar.Style>
                        </ProgressBar>
                        <TextBlock Text="Logging in, please wait..." 
                                   Foreground="#333333" 
                                   HorizontalAlignment="Center" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"/>
                        <TextBlock Text="Verifying your credentials" 
                                   Foreground="#777777" 
                                   HorizontalAlignment="Center" 
                                   FontSize="12"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>