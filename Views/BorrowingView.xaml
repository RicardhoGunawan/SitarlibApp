<UserControl x:Class="SitarLib.Views.BorrowingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SitarLib.Views"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style x:Key="CellText" TargetType="TextBlock">
            <Setter Property="Margin"            Value="10,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="CellTextTrim" TargetType="TextBlock" BasedOn="{StaticResource CellText}">
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>
        <!-- Kuas warna -->
        <SolidColorBrush x:Key="PlusBrush"  Color="#27ae60"/>  <!-- hijau -->
        <SolidColorBrush x:Key="MinusBrush" Color="#c0392b"/>  <!-- merah -->

        <!-- Style khusus tombol tambah/kurang -->
        <Style x:Key="QtyActionButtonStyle" TargetType="Button">
            <!-- Ukuran & tampilan dasar -->
            <Setter Property="Width"           Value="30"/>
            <Setter Property="Height"          Value="24"/>
            <Setter Property="Foreground"      Value="White"/>
            <Setter Property="FontWeight"      Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin"          Value="5,0,0,0"/>
            <Setter Property="Cursor"          Value="Hand"/>

            <!-- Default (+) -->
            <Setter Property="Background" Value="{StaticResource PlusBrush}"/>

            <!-- Template sederhana + efek hover/pressed -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <!-- Jika konten “-” ⇒ ganti jadi merah -->
            <Style.Triggers>
                <DataTrigger Binding="{Binding Content, RelativeSource={RelativeSource Self}}" Value="-">
                    <Setter Property="Background" Value="{StaticResource MinusBrush}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <!-- Style untuk sidebar menu item -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="10,4" />
            <Setter Property="Padding" Value="15,12" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <ContentPresenter Grid.Column="1"
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                                  VerticalAlignment="Center"
                                                  Margin="{TemplateBinding Padding}" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2196F3" />
                                <Setter Property="Cursor" Value="Hand" />
                                <Setter TargetName="ButtonBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="5" ShadowDepth="1" Opacity="0.3" Color="#000000" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style untuk logout button -->
        <!--<Style x:Key="LogoutButtonStyle" TargetType="Button" BasedOn="{StaticResource SidebarButtonStyle}">
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="Background" Value="#E53935" />
            <Setter Property="Margin" Value="15,10" />
        </Style>-->


        <!-- Style untuk DataGrid -->
        <Style x:Key="CustomDataGridStyle" TargetType="DataGrid">
            <Setter Property="Margin" Value="0,10,0,0" />
            <Setter Property="AutoGenerateColumns" Value="False" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="CanUserAddRows" Value="False" />
            <Setter Property="CanUserDeleteRows" Value="False" />
            <Setter Property="CanUserReorderColumns" Value="False" />
            <Setter Property="CanUserResizeRows" Value="False" />
            <Setter Property="CanUserSortColumns" Value="True" />
            <Setter Property="HeadersVisibility" Value="Column" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="GridLinesVisibility" Value="None" />
            <Setter Property="AlternatingRowBackground" Value="#F9F9F9" />
            <Setter Property="BorderBrush" Value="#DDDDDD" />
            <Setter Property="Background" Value="White" />
            <Setter Property="RowHeight" Value="35" />
        </Style>

        <!-- Style untuk header DataGrid -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#f0f6fb" />
            <Setter Property="Foreground" Value="#333333" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="10,8" />
            <Setter Property="BorderBrush" Value="#DDDDDD" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
        </Style>

        <!-- Style untuk rows DataGrid -->
        <Style TargetType="DataGridRow">
            <Setter Property="BorderBrush" Value="#EEEEEE" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
        </Style>

        <!-- Style untuk search button -->
        <Style x:Key="SearchButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="15,5" />
            <Setter Property="Background" Value="#4CAF50" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3D8B40" />
                                <Setter Property="Cursor" Value="Hand" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Style untuk action button -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="15,8" />
            <Setter Property="Margin" Value="0,10,0,0" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9" />
                                <Setter Property="Cursor" Value="Hand" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Style untuk ComboBox -->
        <Style x:Key="CustomComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Padding" Value="8,5" />
            <Setter Property="Margin" Value="0,0,0,15" />
            <Setter Property="BorderBrush" Value="#DDDDDD" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>
        
        <!-- Style untuk TextBox -->
        <Style x:Key="CustomTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="8,5" />
            <Setter Property="Margin" Value="0,0,10,0" />
            <Setter Property="BorderBrush" Value="#DDDDDD" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>
        
        <!-- Style untuk DatePicker -->
        <Style x:Key="CustomDatePickerStyle" TargetType="DatePicker">
            <Setter Property="Margin" Value="0,0,0,15" />
            <Setter Property="BorderBrush" Value="#DDDDDD" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>
        
        <!-- Style untuk label/caption -->
        <Style x:Key="FieldLabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#555555" />
            <Setter Property="Margin" Value="0,0,0,5" />
        </Style>
        
        <!-- Style untuk item menu yang aktif -->
        <Style x:Key="ActiveMenuItemStyle" TargetType="Button" BasedOn="{StaticResource SidebarButtonStyle}">
            <Setter Property="Background" Value="#2196F3" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <ContentPresenter Grid.Column="1"
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                                  VerticalAlignment="Center"
                                                  Margin="{TemplateBinding Padding}" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1E88E5" />
                                <Setter Property="Cursor" Value="Hand" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <!-- Sidebar Navigation - Background dengan gradient untuk tampilan yang lebih modern -->
        <Border Grid.Column="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#1565C0" Offset="0"/>
                    <GradientStop Color="#0D47A1" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- App Logo and Title - Dengan efek bayangan dan logo -->
                <Border Grid.Row="0" Padding="15,20" BorderThickness="0,0,0,1" BorderBrush="#1C2B39">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="/Assets/SMAN-TKN-PABAR.ico" Width="70" Height="70" Margin="0,0,10,0"/>
                        <TextBlock Text="SitarLib" FontSize="24" FontWeight="Bold" Foreground="White" VerticalAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect BlurRadius="3" ShadowDepth="1" Opacity="0.5" />
                            </TextBlock.Effect>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Menu Items - Dengan efek hover yang lebih menarik dan sudut yang dibulatkan -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,15,0,0">
                    <StackPanel>
                        <!-- Dashboard - Menu yang aktif -->
                        <Button Style="{StaticResource SidebarButtonStyle}" Command="{Binding NavigateToDashboardCommand}" Margin="15,4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="🏠" FontSize="16" />
                                <TextBlock Grid.Column="1" Text="Dashboard" FontWeight="SemiBold" />
                            </Grid>
                        </Button>

                        <!-- Books -->
                        <Button Style="{StaticResource SidebarButtonStyle}" Command="{Binding NavigateToBookCommand}" Margin="15,4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="📚" FontSize="16" />
                                <TextBlock Grid.Column="1" Text="Data Buku" />
                            </Grid>
                        </Button>

                        <!-- Members -->
                        <Button Style="{StaticResource SidebarButtonStyle}" Command="{Binding NavigateToMemberCommand}" Margin="15,4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="👥" FontSize="16" />
                                <TextBlock Grid.Column="1" Text="Data Anggota" />
                            </Grid>
                        </Button>

                        <!-- Borrowings -->
                        <Button Style="{StaticResource ActiveMenuItemStyle}" Margin="15,4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="📋" FontSize="16" />
                                <TextBlock Grid.Column="1" Text="Data Peminjaman" />
                            </Grid>
                        </Button>

                        <!-- Report -->
                        <Button Style="{StaticResource SidebarButtonStyle}" Command="{Binding NavigateToReportCommand}" Margin="15,4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="📈" FontSize="16" />
                                <TextBlock Grid.Column="1" Text="Laporan" />
                            </Grid>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        
        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#f8f9fa" Offset="0"/>
                    <GradientStop Color="#e9ecef" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header/Title area -->
            <Border Grid.Row="0" Padding="25,18" Background="White" BorderThickness="0,0,0,1" BorderBrush="#EEEEEE">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center">
                        <TextBlock Text="Piminjaman" FontSize="24" FontWeight="SemiBold" Foreground="#333333"/>
                        <TextBlock Text="Kelola semua transaksi peminjaman" FontSize="13" Foreground="#777777" Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Content Area -->
            <Grid Grid.Row="1" Margin="25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="350"/>
                </Grid.ColumnDefinitions>
                
                <!-- Borrowing List -->
                <Border Grid.Column="0" 
                        Background="White" 
                        BorderBrush="#DDDDDD" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Margin="0,0,15,0">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.2" />
                    </Border.Effect>
                    
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Header and description -->
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Orientation="Vertical">
                                <TextBlock Text="Daftar Peminjaman" FontWeight="Bold" FontSize="18" Foreground="#333333"/>
                                <TextBlock Text="Daftar semua transaksi peminjaman" Foreground="#777777" FontSize="12" Margin="0,5,0,0"/>
                            </StackPanel>
                            
                            <Button Grid.Column="1" 
                                    Content="↻ Refresh" 
                                    Command="{Binding RefreshDataCommand}" 
                                    Style="{StaticResource SearchButtonStyle}"/>
                        </Grid>
                        
                        <!-- Search controls -->
                        <Grid Grid.Row="1" Margin="0,15,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <ComboBox Grid.Column="0"
                                      ItemsSource="{Binding StatusFilters}"
                                      SelectedItem="{Binding FilterStatus}"
                                      Width="150"
                                      Margin="0,0,10,0" 
                                      Padding="8,5"
                                      BorderBrush="#DDDDDD"/>
                            
                            <TextBox Grid.Column="1" 
                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource CustomTextBoxStyle}"/>
                            
                            <Button Grid.Column="2" 
                                    Content="Search" 
                                    Style="{StaticResource SearchButtonStyle}"/>
                        </Grid>
                        
                        <DataGrid Grid.Row="2"
                                  ItemsSource="{Binding Borrowings}"
                                  SelectedItem="{Binding SelectedBorrowing}"
                                  Style="{StaticResource CustomDataGridStyle}"
                                  ColumnWidth="*"                   
                                  HeadersVisibility="Column"
                                  HorizontalScrollBarVisibility="Disabled">

                            <DataGrid.Columns>

                                <!-- Judul Buku – 3* -->
                                <DataGridTextColumn Header="Judul Buku"
                                                    Binding="{Binding Book.Title}"
                                                    Width="3*"
                                                    ElementStyle="{StaticResource CellTextTrim}" />

                                <!-- Anggota – 2* -->
                                <DataGridTextColumn Header="Anggota"
                                                    Binding="{Binding Member.FullName}"
                                                    Width="2*"
                                                    ElementStyle="{StaticResource CellText}" />

                                <!-- Borrow Date – 100 px -->
                                <DataGridTextColumn Header="Borrow Date"
                                                    Binding="{Binding BorrowDate, StringFormat=d}"
                                                    Width="100"
                                                    ElementStyle="{StaticResource CellText}" />

                                <!-- Due Date – 100 px -->
                                <DataGridTextColumn Header="Due Date"
                                                    Binding="{Binding DueDate, StringFormat=d}"
                                                    Width="100"
                                                    ElementStyle="{StaticResource CellText}" />

                                <!-- Return Date – 100 px -->
                                <DataGridTextColumn Header="Return Date"
                                                    Binding="{Binding ReturnDate, StringFormat=d}"
                                                    Width="100"
                                                    ElementStyle="{StaticResource CellText}" />

                                <!-- Status – badge 90 px -->
                                <DataGridTemplateColumn Header="Status" Width="90">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="3"
                                                    Padding="8,3"
                                                    Margin="5,0"
                                                    HorizontalAlignment="Center">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="#e1f5fe"/>    <!-- Borrowed -->
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Overdue">
                                                                <Setter Property="Background" Value="#ffebee"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Returned">
                                                                <Setter Property="Background" Value="#e8f5e9"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>

                                                <TextBlock Text="{Binding Status}"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="#0288d1"/>  <!-- Borrowed -->
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status}" Value="Overdue">
                                                                    <Setter Property="Foreground" Value="#d32f2f"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Returned">
                                                                    <Setter Property="Foreground" Value="#388e3c"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
                
                <!-- Borrowing Form -->
                <Border Grid.Column="1" 
                        Background="White" 
                        BorderBrush="#DDDDDD" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Margin="15,0,0,0">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.2" />
                    </Border.Effect>
                    
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <Rectangle Grid.Row="0" Height="5" VerticalAlignment="Top">
                            <Rectangle.Fill>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#3498db" Offset="0"/>
                                    <GradientStop Color="#2980b9" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                        
                        <ScrollViewer Grid.Row="1" Margin="20" VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <TextBlock Text="Pinjaman Baru" 
                                           FontWeight="Bold" 
                                           FontSize="18"
                                           Foreground="#333333"
                                           Margin="0,0,0,5"/>
                                
                                <TextBlock Text="Isi rincian untuk membuat pinjaman baru" 
                                           Foreground="#777777" 
                                           FontSize="12" 
                                           Margin="0,0,0,20"/>
                                
                                <TextBlock Text="Pilih Buku (Type to search by Title or ISBN)" Style="{StaticResource FieldLabelStyle}"/>
                                
                                <!-- Enhanced ComboBox with Book Cover in Dropdown -->
                                <ComboBox ItemsSource="{Binding FilteredBooks}"
                                      SelectedItem="{Binding SelectedBook, Mode=TwoWay}"
                                      Text="{Binding BookSearchText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                      IsEditable="True"
                                      IsTextSearchEnabled="False"
                                      TextSearch.TextPath="Title"
                                      StaysOpenOnEdit="True"
                                      Style="{StaticResource CustomComboBoxStyle}"
                                      MaxDropDownHeight="350"
                                      Margin="0,5,0,10">
                                
                                    <!-- Template for items in dropdown list -->
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="Transparent" 
                                                    Padding="8,6"
                                                    Margin="2,1"
                                                    CornerRadius="6"
                                                    BorderThickness="1"
                                                    BorderBrush="Transparent">
                                                
                                                <!-- Hover effect -->
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#F8F9FA"/>
                                                                <Setter Property="BorderBrush" Value="#E9ECEF"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="50"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="60"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <!-- Book Cover with Shadow -->
                                                    <Border Grid.Column="0" 
                                                            Width="40" 
                                                            Height="52" 
                                                            CornerRadius="4"
                                                            Background="White"
                                                            BorderBrush="#E1E5E9" 
                                                            BorderThickness="1">
                                                        <!-- Drop shadow effect -->
                                                        <Border.Effect>
                                                            <DropShadowEffect Color="Black" 
                                                                              Opacity="0.1" 
                                                                              BlurRadius="4" 
                                                                              ShadowDepth="2" 
                                                                              Direction="315"/>
                                                        </Border.Effect>
                                                        
                                                        <Image Source="{Binding DisplayCoverPath}" 
                                                               Stretch="UniformToFill"
                                                               RenderOptions.BitmapScalingMode="HighQuality"
                                                               ClipToBounds="True"/>
                                                    </Border>
                                                    
                                                    <!-- Book Details with Better Spacing -->
                                                    <StackPanel Grid.Column="1" 
                                                                Margin="12,2,8,2"
                                                                VerticalAlignment="Center">
                                                        
                                                        <!-- Book Title -->
                                                        <TextBlock Text="{Binding Title}" 
                                                                   FontWeight="SemiBold" 
                                                                   FontSize="13"
                                                                   Foreground="#2C3E50"
                                                                   TextWrapping="NoWrap"
                                                                   TextTrimming="CharacterEllipsis"
                                                                   LineHeight="16"/>
                                                                   
                                                        <!-- Author -->
                                                        <TextBlock Text="{Binding Author}" 
                                                                   FontSize="11" 
                                                                   Foreground="#6C757D"
                                                                   TextTrimming="CharacterEllipsis"
                                                                   Margin="0,2,0,0"
                                                                   LineHeight="14"/>
                                                                   
                                                        <!-- ISBN with Icon -->
                                                        <StackPanel Orientation="Horizontal" 
                                                                    Margin="0,3,0,0">
                                                            <TextBlock Text="📚 " 
                                                                       FontSize="9" 
                                                                       Foreground="#ADB5BD"
                                                                       VerticalAlignment="Center"/>
                                                            <TextBlock Text="{Binding ISBN}" 
                                                                       FontSize="10" 
                                                                       Foreground="#ADB5BD"
                                                                       VerticalAlignment="Center"/>
                                                        </StackPanel>
                                                        
                                                        <!-- Category Badge -->
                                                        <Border Background="#E3F2FD" 
                                                                CornerRadius="8"
                                                                Padding="4,1"
                                                                Margin="0,3,0,0"
                                                                HorizontalAlignment="Left"
                                                                MaxWidth="120">
                                                            <TextBlock Text="{Binding Category}" 
                                                                       FontSize="9" 
                                                                       Foreground="#1976D2"
                                                                       FontWeight="Medium"
                                                                       TextTrimming="CharacterEllipsis"/>
                                                        </Border>
                                                    </StackPanel>
                                                    
                                                    <!-- Stock Info with Better Design -->
                                                    <StackPanel Grid.Column="2" 
                                                                VerticalAlignment="Center"
                                                                HorizontalAlignment="Center"
                                                                Margin="4,0">
                                                        
                                                        <!-- Stock Number with Gradient -->
                                                        <Border CornerRadius="12"
                                                                Padding="8,4"
                                                                MinWidth="32"
                                                                HorizontalAlignment="Center">
                                                            <Border.Background>
                                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                                    <GradientStop Color="#27AE60" Offset="0"/>
                                                                    <GradientStop Color="#2ECC71" Offset="1"/>
                                                                </LinearGradientBrush>
                                                            </Border.Background>
                                                            
                                                            <!-- Drop shadow for stock badge -->
                                                            <Border.Effect>
                                                                <DropShadowEffect Color="#27AE60" 
                                                                                  Opacity="0.3" 
                                                                                  BlurRadius="6" 
                                                                                  ShadowDepth="2" 
                                                                                  Direction="315"/>
                                                            </Border.Effect>
                                                            
                                                            <TextBlock Text="{Binding Stock}" 
                                                                       Foreground="White"
                                                                       FontSize="11"
                                                                       FontWeight="Bold"
                                                                       HorizontalAlignment="Center"/>
                                                        </Border>
                                                        
                                                        <!-- "Available" Text -->
                                                        <TextBlock Text="available" 
                                                                   FontSize="8" 
                                                                   Foreground="#6C757D"
                                                                   HorizontalAlignment="Center"
                                                                   Margin="0,2,0,0"
                                                                   FontStyle="Italic"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                    
                                    <!-- Improved Item Container Style -->
                                    <ComboBox.ItemContainerStyle>
                                        <Style TargetType="ComboBoxItem">
                                            <Setter Property="Padding" Value="0"/>
                                            <Setter Property="Margin" Value="0"/>
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsHighlighted" Value="True">
                                                    <Setter Property="Background" Value="#E8F5E8"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter Property="Background" Value="#D4F4DD"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ComboBox.ItemContainerStyle>
                                 </ComboBox>

                                <!-- Book Preview Section - Ditampilkan ketika buku dipilih -->
                                <Border Visibility="{Binding IsBookSelected, Converter={StaticResource BooleanToVisibilityConverter}}"
                                        Background="#f8f9fa"
                                        BorderThickness="1"
                                        BorderBrush="#e9ecef"
                                        CornerRadius="5"
                                        Padding="15"
                                        Margin="0,10,0,15">
                                    
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Larger Cover Image -->
                                        <Border Grid.Column="0" 
                                                Width="70" 
                                                Height="90" 
                                                CornerRadius="4"
                                                BorderBrush="#CCCCCC" 
                                                BorderThickness="1">
                                            <Image Source="{Binding SelectedBook.DisplayCoverPath}" 
                                                   Stretch="UniformToFill"
                                                   RenderOptions.BitmapScalingMode="HighQuality"/>
                                        </Border>
                                        
                                        <!-- Detailed Book Info -->
                                        <StackPanel Grid.Column="1" 
                                                    Margin="15,0,0,0">
                                            <TextBlock Text="{Binding SelectedBook.Title}" 
                                                       FontWeight="Bold" 
                                                       FontSize="14"
                                                       Foreground="#2c3e50"
                                                       TextWrapping="Wrap"
                                                       Margin="0,0,0,3"/>
                                                       
                                            <TextBlock Text="{Binding SelectedBook.Author}" 
                                                       FontSize="12" 
                                                       Foreground="#7f8c8d"
                                                       Margin="0,0,0,2"/>
                                                       
                                            <TextBlock Text="{Binding SelectedBook.Publisher}" 
                                                       FontSize="11" 
                                                       Foreground="#95a5a6"
                                                       Margin="0,0,0,2"/>
                                                       
                                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                <TextBlock Text="Available Stock: " 
                                                           FontSize="11" 
                                                           Foreground="#7f8c8d"/>
                                                <TextBlock Text="{Binding SelectedBook.Stock}" 
                                                           FontSize="11" 
                                                           Foreground="#27ae60"
                                                           FontWeight="Bold"/>
                                            </StackPanel>
                                            
                                            <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                <TextBlock Text="Category: " 
                                                           FontSize="11" 
                                                           Foreground="#7f8c8d"/>
                                                <TextBlock Text="{Binding SelectedBook.Category}" 
                                                           FontSize="11" 
                                                           Foreground="#8e44ad"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                                
                                <!-- Quantity Selection -->
                                <TextBlock Text="Jumlah Buku" Style="{StaticResource FieldLabelStyle}"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBox Grid.Column="0" 
                                             Text="{Binding CurrentBorrowing.Quantity, UpdateSourceTrigger=PropertyChanged}" 
                                             Style="{StaticResource CustomTextBoxStyle}"/>
                                    
                                    <!-- Tombol Kurang -->
                                    <Button Grid.Column="1"
                                            Content="-"
                                            Command="{Binding DecrementQuantityCommand}"
                                            Style="{StaticResource QtyActionButtonStyle}" />

                                    <!-- Tombol Tambah -->
                                    <Button Grid.Column="2"
                                            Content="+"
                                            Command="{Binding IncrementQuantityCommand}"
                                            Style="{StaticResource QtyActionButtonStyle}" />
                                </Grid>
                                
                                <!-- Member Selection with Integrated Search -->
                                <TextBlock Text="Pilih Anggota (Type to search by Name or Code)" Style="{StaticResource FieldLabelStyle}"/>
                                <ComboBox ItemsSource="{Binding FilteredMembers}"
                                          SelectedItem="{Binding SelectedMember}"
                                          Text="{Binding MemberSearchText, UpdateSourceTrigger=PropertyChanged}"
                                          DisplayMemberPath="FullName"
                                          IsEditable="True"
                                          IsTextSearchEnabled="True"
                                          StaysOpenOnEdit="True"
                                          Style="{StaticResource CustomComboBoxStyle}"/>
                                
                                <TextBlock Text="Tanggal Peminjaman" Style="{StaticResource FieldLabelStyle}"/>
                                <DatePicker SelectedDate="{Binding CurrentBorrowing.BorrowDate}" 
                                            IsEnabled="False"
                                            Style="{StaticResource CustomDatePickerStyle}"/>
                                
                                <TextBlock Text="Tenggat waktu" Style="{StaticResource FieldLabelStyle}"/>
                                <DatePicker SelectedDate="{Binding CurrentBorrowing.DueDate}" 
                                            Style="{StaticResource CustomDatePickerStyle}"/>
                                
                                <Button Content="Pinjam Buku" 
                                        Command="{Binding BorrowCommand}"
                                        Background="#2ecc71"
                                        Style="{StaticResource ActionButtonStyle}"/>
                                
                                <Rectangle Height="1" Fill="#DDDDDD" Margin="0,20,0,20"/>
                                
                                <TextBlock Text="Peminjaman Terpilih" 
                                         FontWeight="Bold" 
                                         FontSize="16"
                                         Foreground="#333333"
                                         Margin="0,0,0,15"/>
                                
                                <Button Content="Kembalikan Buku Pilihan" 
                                        Command="{Binding ReturnCommand}"
                                        Background="#3498db"
                                        Style="{StaticResource ActionButtonStyle}"/>
                                
                                <Button Content="Membatalkan" 
                                        Command="{Binding CancelCommand}"
                                        Background="#95a5a6"
                                        Style="{StaticResource ActionButtonStyle}"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>