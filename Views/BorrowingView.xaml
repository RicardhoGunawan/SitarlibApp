<UserControl x:Class="SitarLib.Views.BorrowingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SitarLib.Views"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#3498db" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="SitarLib" FontSize="22" FontWeight="Bold" Foreground="White"/>
                    <TextBlock Text=" | Borrowing Management" FontSize="22" Foreground="White"/>
                </StackPanel>
                
                <Button Grid.Column="1" 
                        Content="Back to Dashboard" 
                        Command="{Binding NavigateToDashboardCommand}"
                        Padding="15,5"
                        Background="#2980b9"
                        Foreground="White"
                        BorderThickness="0"/>
            </Grid>
        </Border>
        
        <!-- Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="350"/>
            </Grid.ColumnDefinitions>
            
            <!-- Borrowing List -->
            <Border Grid.Column="0" 
                    Background="White" 
                    BorderBrush="#DDD" 
                    BorderThickness="1" 
                    CornerRadius="5" 
                    Margin="0,0,10,0">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <ComboBox Grid.Column="0"
                                  ItemsSource="{Binding StatusFilters}"
                                  SelectedItem="{Binding FilterStatus}"
                                  Width="120"
                                  Margin="0,0,10,0"/>
                        
                        <TextBox Grid.Column="1" 
                                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                 Padding="5"
                                 Margin="0,0,10,0"
                                 BorderBrush="#DDD"
                                 BorderThickness="1"/>
                        
                        <Button Grid.Column="2" 
                                Content="Search" 
                                Padding="15,5"
                                Background="#3498db"
                                Foreground="White"
                                BorderThickness="0"/>
                    </Grid>
                    
                    <DataGrid Grid.Row="1" 
                              ItemsSource="{Binding Borrowings}" 
                              SelectedItem="{Binding SelectedBorrowing}"
                              AutoGenerateColumns="False" 
                              IsReadOnly="True" 
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserReorderColumns="False"
                              CanUserResizeRows="False"
                              CanUserSortColumns="True"
                              HeadersVisibility="Column"
                              BorderThickness="1"
                              GridLinesVisibility="All"
                              AlternatingRowBackground="#F9F9F9">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                            <DataGridTextColumn Header="Book" Binding="{Binding Book.Title}" Width="*"/>
                            <DataGridTextColumn Header="Member" Binding="{Binding Member.FullName}" Width="*"/>
                            <DataGridTextColumn Header="Borrow Date" Binding="{Binding BorrowDate, StringFormat=d}" Width="Auto"/>
                            <DataGridTextColumn Header="Due Date" Binding="{Binding DueDate, StringFormat=d}" Width="Auto"/>
                            <DataGridTextColumn Header="Return Date" Binding="{Binding ReturnDate, StringFormat=d}" Width="Auto"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="Auto"/>
                            <DataGridTextColumn Header="Fine" Binding="{Binding Fine, StringFormat=C}" Width="Auto"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
            
            <!-- Borrowing Form -->
            <Border Grid.Column="1" 
                    Background="White" 
                    BorderBrush="#DDD" 
                    BorderThickness="1" 
                    CornerRadius="5" 
                    Margin="10,0,0,0">
                <ScrollViewer Margin="15" VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="New Borrowing" 
                                  FontWeight="Bold" 
                                  FontSize="16"
                                  Margin="0,0,0,15"/>
                        
                        <TextBlock Text="Select Book" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding AvailableBooks}"
                                  SelectedItem="{Binding SelectedBook}"
                                  DisplayMemberPath="Title"
                                  Padding="5" 
                                  Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Select Member" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding ActiveMembers}"
                                  SelectedItem="{Binding SelectedMember}"
                                  DisplayMemberPath="FullName"
                                  Padding="5" 
                                  Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Borrow Date" Margin="0,0,0,5"/>
                        <DatePicker SelectedDate="{Binding CurrentBorrowing.BorrowDate}" 
                                    IsEnabled="False"
                                    Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Due Date" Margin="0,0,0,5"/>
                        <DatePicker SelectedDate="{Binding CurrentBorrowing.DueDate}" 
                                    Margin="0,0,0,20"/>
                        
                        <Button Content="Borrow" 
                                Command="{Binding BorrowCommand}"
                                Padding="15,5"
                                Margin="0,0,0,10"
                                Background="#2ecc71"
                                Foreground="White"
                                BorderThickness="0"/>
                        
                        <Button Content="Return Selected Book" 
                                Command="{Binding ReturnCommand}"
                                Padding="15,5"
                                Margin="0,10,0,0"
                                Background="#3498db"
                                Foreground="White"
                                BorderThickness="0"/>
                        
                        <Button Content="Cancel" 
                                Command="{Binding CancelCommand}"
                                Padding="15,5"
                                Margin="0,10,0,0"
                                Background="#AAA"
                                Foreground="White"
                                BorderThickness="0"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</UserControl>