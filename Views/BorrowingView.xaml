<UserControl x:Class="SitarLib.Views.BorrowingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SitarLib.Views"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1000">

    <UserControl.Resources>
        <!-- Style untuk sidebar menu item -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="0,2" />
            <Setter Property="Padding" Value="20,15" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#CFD8DC" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <ContentPresenter Grid.Column="1"
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                                  VerticalAlignment="Center"
                                                  Margin="{TemplateBinding Padding}" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2196F3" />
                                <Setter Property="Cursor" Value="Hand" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style untuk logout button -->
        <!--<Style x:Key="LogoutButtonStyle" TargetType="Button" BasedOn="{StaticResource SidebarButtonStyle}">
            <Setter Property="Foreground" Value="#fff" />
        </Style>-->

        <!-- Style untuk DataGrid -->
        <Style x:Key="CustomDataGridStyle" TargetType="DataGrid">
            <Setter Property="Margin" Value="0,10,0,0" />
            <Setter Property="AutoGenerateColumns" Value="False" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="CanUserAddRows" Value="False" />
            <Setter Property="CanUserDeleteRows" Value="False" />
            <Setter Property="CanUserReorderColumns" Value="False" />
            <Setter Property="CanUserResizeRows" Value="False" />
            <Setter Property="CanUserSortColumns" Value="True" />
            <Setter Property="HeadersVisibility" Value="Column" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="GridLinesVisibility" Value="None" />
            <Setter Property="AlternatingRowBackground" Value="#F9F9F9" />
            <Setter Property="BorderBrush" Value="#DDDDDD" />
            <Setter Property="Background" Value="White" />
            <Setter Property="RowHeight" Value="35" />
        </Style>

        <!-- Style untuk header DataGrid -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#f0f6fb" />
            <Setter Property="Foreground" Value="#333333" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="10,8" />
            <Setter Property="BorderBrush" Value="#DDDDDD" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
        </Style>

        <!-- Style untuk rows DataGrid -->
        <Style TargetType="DataGridRow">
            <Setter Property="BorderBrush" Value="#EEEEEE" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
        </Style>

        <!-- Style untuk search button -->
        <Style x:Key="SearchButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="15,5" />
            <Setter Property="Background" Value="#4CAF50" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3D8B40" />
                                <Setter Property="Cursor" Value="Hand" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Style untuk action button -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="15,8" />
            <Setter Property="Margin" Value="0,10,0,0" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9" />
                                <Setter Property="Cursor" Value="Hand" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Style untuk ComboBox -->
        <Style x:Key="CustomComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Padding" Value="8,5" />
            <Setter Property="Margin" Value="0,0,0,15" />
            <Setter Property="BorderBrush" Value="#DDDDDD" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>
        
        <!-- Style untuk TextBox -->
        <Style x:Key="CustomTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="8,5" />
            <Setter Property="Margin" Value="0,0,10,0" />
            <Setter Property="BorderBrush" Value="#DDDDDD" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>
        
        <!-- Style untuk DatePicker -->
        <Style x:Key="CustomDatePickerStyle" TargetType="DatePicker">
            <Setter Property="Margin" Value="0,0,0,15" />
            <Setter Property="BorderBrush" Value="#DDDDDD" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>
        
        <!-- Style untuk label/caption -->
        <Style x:Key="FieldLabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#555555" />
            <Setter Property="Margin" Value="0,0,0,5" />
        </Style>
        
        <!-- Style untuk item menu yang aktif -->
        <Style x:Key="ActiveMenuItemStyle" TargetType="Border">
            <Setter Property="Background" Value="#3498db" />
            <Setter Property="Width" Value="4" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <!-- Sidebar Navigation -->
        <Border Grid.Column="0" Background="#1565C0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Logo dan Judul -->
                <Border Grid.Row="0" Padding="20,25" BorderThickness="0,0,0,1" BorderBrush="#1C2B39">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="SitarLib" FontSize="24" FontWeight="Bold" Foreground="White">
                            <TextBlock.Effect>
                                <DropShadowEffect BlurRadius="3" ShadowDepth="1" Opacity="0.5" />
                            </TextBlock.Effect>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Menu Items -->
                <StackPanel Grid.Row="1" Margin="0,20,0,0">
                    <!-- Dashboard -->
                    <Grid Margin="0,5">
                        <Button Style="{StaticResource SidebarButtonStyle}"
                                Command="{Binding NavigateToDashboardCommand}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="📊" />
                                <TextBlock Grid.Column="1" Text="Dashboard" />
                            </Grid>
                        </Button>
                    </Grid>

                    <!-- Books -->
                    <Grid Margin="0,5">
                        <Button Style="{StaticResource SidebarButtonStyle}" 
                                Command="{Binding NavigateToBookCommand}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="📚" />
                                <TextBlock Grid.Column="1" Text="Books" />
                            </Grid>
                        </Button>
                    </Grid>

                    <!-- Members -->
                    <Grid Margin="0,5">
                        <Button Style="{StaticResource SidebarButtonStyle}" 
                                Command="{Binding NavigateToMemberCommand}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="👥" />
                                <TextBlock Grid.Column="1" Text="Members" />
                            </Grid>
                        </Button>
                    </Grid>

                    <!-- Borrowings (Active) -->
                    <Grid Margin="0,5">
                        <Border Style="{StaticResource ActiveMenuItemStyle}" />
                        <Button Style="{StaticResource SidebarButtonStyle}" 
                                Foreground="White"
                                Background="#42A5F5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="📋" />
                                <TextBlock Grid.Column="1" Text="Borrowings" />
                            </Grid>
                        </Button>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>

        
        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#f8f9fa" Offset="0"/>
                    <GradientStop Color="#e9ecef" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header/Title area -->
            <Border Grid.Row="0" Padding="25,18" Background="White" BorderThickness="0,0,0,1" BorderBrush="#EEEEEE">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center">
                        <TextBlock Text="Borrowings" FontSize="24" FontWeight="SemiBold" Foreground="#333333"/>
                        <TextBlock Text="Manage all borrowing transactions" FontSize="13" Foreground="#777777" Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Content Area -->
            <Grid Grid.Row="1" Margin="25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="350"/>
                </Grid.ColumnDefinitions>
                
                <!-- Borrowing List -->
                <Border Grid.Column="0" 
                        Background="White" 
                        BorderBrush="#DDDDDD" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Margin="0,0,15,0">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.2" />
                    </Border.Effect>
                    
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Header and description -->
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Orientation="Vertical">
                                <TextBlock Text="Borrowing List" FontWeight="Bold" FontSize="18" Foreground="#333333"/>
                                <TextBlock Text="List of all borrowing transactions" Foreground="#777777" FontSize="12" Margin="0,5,0,0"/>
                            </StackPanel>
                            
                            <Button Grid.Column="1" 
                                    Content="↻ Refresh" 
                                    Command="{Binding RefreshDataCommand}" 
                                    Style="{StaticResource SearchButtonStyle}"/>
                        </Grid>
                        
                        <!-- Search controls -->
                        <Grid Grid.Row="1" Margin="0,15,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <ComboBox Grid.Column="0"
                                      ItemsSource="{Binding StatusFilters}"
                                      SelectedItem="{Binding FilterStatus}"
                                      Width="150"
                                      Margin="0,0,10,0" 
                                      Padding="8,5"
                                      BorderBrush="#DDDDDD"/>
                            
                            <TextBox Grid.Column="1" 
                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource CustomTextBoxStyle}"/>
                            
                            <Button Grid.Column="2" 
                                    Content="Search" 
                                    Style="{StaticResource SearchButtonStyle}"/>
                        </Grid>
                        
                        <DataGrid Grid.Row="2" 
                                  ItemsSource="{Binding Borrowings}" 
                                  SelectedItem="{Binding SelectedBorrowing}"
                                  Style="{StaticResource CustomDataGridStyle}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Margin" Value="10,0" />
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <DataGridTextColumn Header="Book Title" Binding="{Binding Book.Title}" Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Margin" Value="10,0" />
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                            <Setter Property="TextTrimming" Value="CharacterEllipsis" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <DataGridTextColumn Header="Member" Binding="{Binding Member.FullName}" Width="*">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Margin" Value="10,0" />
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <DataGridTextColumn Header="Borrow Date" Binding="{Binding BorrowDate, StringFormat=d}" Width="Auto">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Margin" Value="10,0" />
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <DataGridTextColumn Header="Due Date" Binding="{Binding DueDate, StringFormat=d}" Width="Auto">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Margin" Value="10,0" />
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <DataGridTextColumn Header="Return Date" Binding="{Binding ReturnDate, StringFormat=d}" Width="Auto">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Margin" Value="10,0" />
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                
                                <DataGridTemplateColumn Header="Status" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="3" Padding="8,3" Margin="5,0" HorizontalAlignment="Center">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="#e1f5fe" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Overdue">
                                                                <Setter Property="Background" Value="#ffebee" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Returned">
                                                                <Setter Property="Background" Value="#e8f5e9" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding Status}" VerticalAlignment="Center" HorizontalAlignment="Center">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="#0288d1" />
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status}" Value="Overdue">
                                                                    <Setter Property="Foreground" Value="#d32f2f" />
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Returned">
                                                                    <Setter Property="Foreground" Value="#388e3c" />
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
                
                <!-- Borrowing Form -->
                <Border Grid.Column="1" 
                        Background="White" 
                        BorderBrush="#DDDDDD" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Margin="15,0,0,0">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.2" />
                    </Border.Effect>
                    
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <Rectangle Grid.Row="0" Height="5" VerticalAlignment="Top">
                            <Rectangle.Fill>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#3498db" Offset="0"/>
                                    <GradientStop Color="#2980b9" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                        
                        <ScrollViewer Grid.Row="1" Margin="20" VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <TextBlock Text="New Borrowing" 
                                           FontWeight="Bold" 
                                           FontSize="18"
                                           Foreground="#333333"
                                           Margin="0,0,0,5"/>
                                
                                <TextBlock Text="Fill in the details to create a new borrowing entry" 
                                           Foreground="#777777" 
                                           FontSize="12" 
                                           Margin="0,0,0,20"/>
                                
                                <!-- Book Selection with Integrated Search -->
                                <TextBlock Text="Select Book (Type to search by Title or ISBN)" Style="{StaticResource FieldLabelStyle}"/>
                                <ComboBox ItemsSource="{Binding FilteredBooks}"
                                          SelectedItem="{Binding SelectedBook}"
                                          Text="{Binding BookSearchText, UpdateSourceTrigger=PropertyChanged}"
                                          DisplayMemberPath="Title"
                                          IsEditable="True"
                                          IsTextSearchEnabled="True"
                                          StaysOpenOnEdit="True"
                                          Style="{StaticResource CustomComboBoxStyle}"/>
                                
                                <!-- Member Selection with Integrated Search -->
                                <TextBlock Text="Select Member (Type to search by Name or Code)" Style="{StaticResource FieldLabelStyle}"/>
                                <ComboBox ItemsSource="{Binding FilteredMembers}"
                                          SelectedItem="{Binding SelectedMember}"
                                          Text="{Binding MemberSearchText, UpdateSourceTrigger=PropertyChanged}"
                                          DisplayMemberPath="FullName"
                                          IsEditable="True"
                                          IsTextSearchEnabled="True"
                                          StaysOpenOnEdit="True"
                                          Style="{StaticResource CustomComboBoxStyle}"/>
                                
                                <TextBlock Text="Borrow Date" Style="{StaticResource FieldLabelStyle}"/>
                                <DatePicker SelectedDate="{Binding CurrentBorrowing.BorrowDate}" 
                                            IsEnabled="False"
                                            Style="{StaticResource CustomDatePickerStyle}"/>
                                
                                <TextBlock Text="Due Date" Style="{StaticResource FieldLabelStyle}"/>
                                <DatePicker SelectedDate="{Binding CurrentBorrowing.DueDate}" 
                                            Style="{StaticResource CustomDatePickerStyle}"/>
                                
                                <Button Content="Borrow Book" 
                                        Command="{Binding BorrowCommand}"
                                        Background="#2ecc71"
                                        Style="{StaticResource ActionButtonStyle}"/>
                                
                                <Rectangle Height="1" Fill="#DDDDDD" Margin="0,20,0,20"/>
                                
                                <TextBlock Text="Selected Borrowing" 
                                         FontWeight="Bold" 
                                         FontSize="16"
                                         Foreground="#333333"
                                         Margin="0,0,0,15"/>
                                
                                <Button Content="Return Selected Book" 
                                        Command="{Binding ReturnCommand}"
                                        Background="#3498db"
                                        Style="{StaticResource ActionButtonStyle}"/>
                                
                                <Button Content="Cancel" 
                                        Command="{Binding CancelCommand}"
                                        Background="#95a5a6"
                                        Style="{StaticResource ActionButtonStyle}"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>