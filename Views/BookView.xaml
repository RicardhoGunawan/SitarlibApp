<UserControl x:Class="SitarLib.Views.BookView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SitarLib.Views"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1000">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
       <!-- Improved Button Import Styles -->
        <Style x:Key="ModernImportButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1E88E5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1565C0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDBDBD"/>
                                <Setter Property="Foreground" Value="#757575"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernMenuItemButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,12"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Width" Value="220"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F5F5F5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#EEEEEE"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernToolTipStyle" TargetType="ToolTip">
            <Setter Property="Background" Value="#424242"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="HasDropShadow" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToolTip">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Enhanced Shadow Effect -->
        <DropShadowEffect x:Key="EnhancedDropShadowEffect"
                          ShadowDepth="2"
                          Direction="270"
                          Color="Black"
                          Opacity="0.2"
                          BlurRadius="8"/>
        <!-- Sel umum -->
        <Style x:Key="CellText" TargetType="TextBlock">
            <Setter Property="Margin"            Value="10,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Sel dengan ellipsis -->
        <Style x:Key="CellTextTrim" TargetType="TextBlock" BasedOn="{StaticResource CellText}">
            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
        </Style>
        <!-- Style untuk sidebar menu item -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="10,4" />
            <Setter Property="Padding" Value="15,12" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#FFFFFF" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <ContentPresenter Grid.Column="1"
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                                  VerticalAlignment="Center"
                                                  Margin="{TemplateBinding Padding}" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2196F3" />
                                <Setter Property="Cursor" Value="Hand" />
                                <Setter TargetName="ButtonBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="5" ShadowDepth="1" Opacity="0.3" Color="#000000" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style untuk DataGrid -->
        <Style x:Key="CustomDataGridStyle" TargetType="DataGrid">
            <Setter Property="Margin" Value="0,10,0,0" />
            <Setter Property="AutoGenerateColumns" Value="False" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="CanUserAddRows" Value="False" />
            <Setter Property="CanUserDeleteRows" Value="False" />
            <Setter Property="CanUserReorderColumns" Value="False" />
            <Setter Property="CanUserResizeRows" Value="False" />
            <Setter Property="CanUserSortColumns" Value="True" />
            <Setter Property="HeadersVisibility" Value="Column" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="GridLinesVisibility" Value="None" />
            <Setter Property="AlternatingRowBackground" Value="#F9F9F9" />
            <Setter Property="BorderBrush" Value="#DDDDDD" />
            <Setter Property="Background" Value="White" />
            <Setter Property="RowHeight" Value="35" />
        </Style>

        <!-- Style untuk header DataGrid -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#f0f6fb" />
            <Setter Property="Foreground" Value="#333333" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="10,8" />
            <Setter Property="BorderBrush" Value="#DDDDDD" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
        </Style>

        <!-- Style untuk rows DataGrid -->
        <Style TargetType="DataGridRow">
            <Setter Property="BorderBrush" Value="#EEEEEE" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
        </Style>

        <!-- Style untuk search button -->
        <Style x:Key="SearchButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="15,5" />
            <Setter Property="Background" Value="#4CAF50" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3D8B40" />
                                <Setter Property="Cursor" Value="Hand" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Style untuk action button -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="15,8" />
            <Setter Property="Margin" Value="0,10,0,0" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9" />
                                <Setter Property="Cursor" Value="Hand" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Style untuk TextBox -->
        <Style x:Key="CustomTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="8,5" />
            <Setter Property="Margin" Value="0,0,10,0" />
            <Setter Property="BorderBrush" Value="#DDDDDD" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>
        
        <!-- Style untuk form input (extended TextBox) -->
        <Style x:Key="FormInputStyle" TargetType="TextBox" BasedOn="{StaticResource CustomTextBoxStyle}">
            <Setter Property="Margin" Value="0,5,0,15" />
        </Style>
        
        <!-- Style untuk label/caption -->
        <Style x:Key="FieldLabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#555555" />
            <Setter Property="Margin" Value="0,0,0,5" />
        </Style>
        
        <!-- Style untuk item menu yang aktif -->
        <Style x:Key="ActiveMenuItemStyle" TargetType="Button" BasedOn="{StaticResource SidebarButtonStyle}">
            <Setter Property="Background" Value="#2196F3" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <ContentPresenter Grid.Column="1"
                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                                  VerticalAlignment="Center"
                                                  Margin="{TemplateBinding Padding}" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1E88E5" />
                                <Setter Property="Cursor" Value="Hand" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid>
         <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <!-- Sidebar Navigation - Background dengan gradient untuk tampilan yang lebih modern -->
        <Border Grid.Column="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#1565C0" Offset="0"/>
                    <GradientStop Color="#0D47A1" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- App Logo and Title - Dengan efek bayangan dan logo -->
                <Border Grid.Row="0" Padding="15,20" BorderThickness="0,0,0,1" BorderBrush="#1C2B39">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="/Assets/SMAN-TKN-PABAR.ico" Width="70" Height="70" Margin="0,0,10,0"/>
                        <TextBlock Text="SitarLib" FontSize="24" FontWeight="Bold" Foreground="White" VerticalAlignment="Center">
                            <TextBlock.Effect>
                                <DropShadowEffect BlurRadius="3" ShadowDepth="1" Opacity="0.5" />
                            </TextBlock.Effect>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Menu Items - Dengan efek hover yang lebih menarik dan sudut yang dibulatkan -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,15,0,0">
                    <StackPanel>
                        <!-- Dashboard - Menu yang aktif -->
                        <Button Style="{StaticResource SidebarButtonStyle}" Command="{Binding NavigateToDashboardCommand}" Margin="15,4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="🏠" FontSize="16" />
                                <TextBlock Grid.Column="1" Text="Dashboard" FontWeight="SemiBold" />
                            </Grid>
                        </Button>

                        <!-- Books -->
                        <Button Style="{StaticResource ActiveMenuItemStyle}" Margin="15,4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="📚" FontSize="16" />
                                <TextBlock Grid.Column="1" Text="Data Buku" />
                            </Grid>
                        </Button>

                        <!-- Members -->
                        <Button Style="{StaticResource SidebarButtonStyle}" Command="{Binding NavigateToMemberCommand}" Margin="15,4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="👥" FontSize="16" />
                                <TextBlock Grid.Column="1" Text="Data Anggota" />
                            </Grid>
                        </Button>

                        <!-- Borrowings -->
                        <Button Style="{StaticResource SidebarButtonStyle}" Command="{Binding NavigateToBorrowingCommand}" Margin="15,4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="📋" FontSize="16" />
                                <TextBlock Grid.Column="1" Text="Data Peminjaman" />
                            </Grid>
                        </Button>

                        <!-- Report -->
                        <Button Style="{StaticResource SidebarButtonStyle}" Command="{Binding NavigateToReportCommand}" Margin="15,4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="📈" FontSize="16" />
                                <TextBlock Grid.Column="1" Text="Laporan" />
                            </Grid>
                        </Button>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Column="1">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#f8f9fa" Offset="0"/>
                    <GradientStop Color="#e9ecef" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header/Title area -->
            <Border Grid.Row="0" Padding="25,18" Background="White" BorderThickness="0,0,0,1" BorderBrush="#EEEEEE">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center">
                        <TextBlock Text="Buku" FontSize="24" FontWeight="SemiBold" Foreground="#333333"/>
                        <TextBlock Text="Kelola buku perpustakaan" FontSize="13" Foreground="#777777" Margin="0,5,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Content Area -->
            <Grid Grid.Row="1" Margin="25">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="350"/>
                </Grid.ColumnDefinitions>
                
                <!-- Book List -->
                <Border Grid.Column="0" 
                        Background="White" 
                        BorderBrush="#DDDDDD" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Margin="0,0,15,0">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.2" />
                    </Border.Effect>
                    
                    <Grid Margin="20">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Header and description -->
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Orientation="Vertical">
                                <TextBlock Text="Daftar Buku" FontWeight="Bold" FontSize="18" Foreground="#333333"/>
                                <TextBlock Text="Daftar semua buku perpustakaan" Foreground="#777777" FontSize="12" Margin="0,5,0,0"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button x:Name="ImportButton"
                                        Style="{StaticResource ModernImportButtonStyle}"
                                        Command="{Binding ShowImportOptionsCommand}">
                                    <StackPanel Orientation="Horizontal">
                                        <Path Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z" 
                                              Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                                              Width="16" Height="16"
                                              Stretch="Uniform"
                                              Margin="0,0,8,0"/>
                                        <TextBlock Text="Import" 
                                                   VerticalAlignment="Center" 
                                                   FontWeight="SemiBold"
                                                   FontFamily="Segoe UI"/>
                                        <Path Data="M7.41,8.58L12,13.17L16.59,8.58L18,10L12,16L6,10L7.41,8.58Z"
                                              Fill="{Binding RelativeSource={RelativeSource AncestorType=Button}, Path=Foreground}"
                                              Width="12" Height="12"
                                              Stretch="Uniform"
                                              Margin="8,0,0,0"/>
                                    </StackPanel>
                                    
                                    <Button.ToolTip>
                                        <ToolTip Content="Import books from file" Style="{StaticResource ModernToolTipStyle}"/>
                                    </Button.ToolTip>
                                </Button>

                                <Popup Name="ImportOptionsPopup"
                                        IsOpen="{Binding IsImportOptionsOpen, Mode=TwoWay}"
                                        PlacementTarget="{Binding ElementName=ImportButton}"
                                        Placement="Bottom"
                                        AllowsTransparency="True"
                                        StaysOpen="False">
                                    <Border Background="White"
                                            BorderBrush="#E0E0E0"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Effect="{StaticResource EnhancedDropShadowEffect}">
                                        <StackPanel Margin="4">
                                            <Button Style="{StaticResource ModernMenuItemButtonStyle}"
                                                    Command="{Binding ImportCsvCommand}">
                                                <StackPanel Orientation="Horizontal">
                                                    <Path Data="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20M10,19L12,15H9V10H15V15L13,19H10Z"
                                                          Fill="#2196F3"
                                                          Width="18" Height="18"
                                                          Stretch="Uniform"
                                                          Margin="8,0,12,0"/>
                                                    <TextBlock Text="Import CSV" 
                                                               VerticalAlignment="Center"
                                                               FontFamily="Segoe UI"/>
                                                </StackPanel>
                                            </Button>
                                            <Separator Margin="0,4" Background="#F0F0F0" Height="1"/>
                                            <Button Style="{StaticResource ModernMenuItemButtonStyle}"
                                                    Command="{Binding ImportXlsxCommand}">
                                                <StackPanel Orientation="Horizontal">
                                                    <Path Data="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20M12.35,13.33L15.25,9.42L16.67,10.84L12.35,16.17L9.83,13.65L11.25,12.23L12.35,13.33Z"
                                                          Fill="#4CAF50"
                                                          Width="18" Height="18"
                                                          Stretch="Uniform"
                                                          Margin="8,0,12,0"/>
                                                    <TextBlock Text="Import Excel (XLSX)" 
                                                               VerticalAlignment="Center"
                                                               FontFamily="Segoe UI"/>
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>
                                    </Border>
                                </Popup>
                            </StackPanel>
                        </Grid>
                        <!-- Loading Overlay untuk Import Buku -->
                        <Grid Background="#90000000" Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Border Background="#FFFFFF" 
                                    CornerRadius="10" 
                                    Width="300" 
                                    Height="160"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="3" Direction="270" Color="Black" Opacity="0.2" BlurRadius="10"/>
                                </Border.Effect>
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <!-- Circular ProgressBar -->
                                    <ProgressBar IsIndeterminate="True" 
                                                 Width="40" 
                                                 Height="40"
                                                 Foreground="#2196F3" 
                                                 Margin="0,0,0,15">
                                        <ProgressBar.Style>
                                            <Style TargetType="{x:Type ProgressBar}">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="{x:Type ProgressBar}">
                                                            <Border BorderBrush="Transparent" 
                                                                    BorderThickness="0" 
                                                                    Background="Transparent" 
                                                                    CornerRadius="20">
                                                                <Grid>
                                                                    <Ellipse x:Name="PART_Track" 
                                                                             StrokeThickness="4" 
                                                                             Stroke="#E0E0E0" 
                                                                             Fill="Transparent"/>
                                                                    <Ellipse x:Name="PART_Indicator" 
                                                                             StrokeThickness="4" 
                                                                             Stroke="#2196F3" 
                                                                             Fill="Transparent"
                                                                             StrokeDashArray="0,100"
                                                                             RenderTransformOrigin="0.5,0.5">
                                                                        <Ellipse.RenderTransform>
                                                                            <RotateTransform x:Name="RotateTransform" Angle="0"/>
                                                                        </Ellipse.RenderTransform>
                                                                    </Ellipse>
                                                                </Grid>
                                                            </Border>
                                                            <ControlTemplate.Triggers>
                                                                <Trigger Property="IsIndeterminate" Value="true">
                                                                    <Setter Property="StrokeDashArray" TargetName="PART_Indicator" Value="20,80"/>
                                                                    <Trigger.EnterActions>
                                                                        <BeginStoryboard>
                                                                            <Storyboard>
                                                                                <DoubleAnimation Storyboard.TargetName="RotateTransform" 
                                                                                              Storyboard.TargetProperty="Angle"
                                                                                              From="0" To="360" Duration="0:0:1.5"
                                                                                              RepeatBehavior="Forever" />
                                                                            </Storyboard>
                                                                        </BeginStoryboard>
                                                                    </Trigger.EnterActions>
                                                                </Trigger>
                                                            </ControlTemplate.Triggers>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </ProgressBar.Style>
                                    </ProgressBar>
                                    
                                    <TextBlock Text="Importing Books" 
                                               Foreground="#333333" 
                                               HorizontalAlignment="Center" 
                                               FontSize="16" 
                                               FontWeight="SemiBold"/>
                                               
                                    <TextBlock Text="{Binding BusyMessage}" 
                                               Foreground="#777777" 
                                               HorizontalAlignment="Center" 
                                               TextWrapping="Wrap"
                                               MaxWidth="260"
                                               TextAlignment="Center"
                                               FontSize="12"
                                               Margin="0,8,0,0"/>
                                               
                                    <TextBlock Text="Please don't close this window" 
                                               Foreground="#999999" 
                                               HorizontalAlignment="Center" 
                                               FontSize="11" 
                                               FontStyle="Italic"
                                               Margin="0,12,0,0"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                        
                        <!-- Search controls -->
                        <Grid Grid.Row="1" Margin="0,15,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBox Grid.Column="0" 
                                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                                     Style="{StaticResource CustomTextBoxStyle}"/>
                            
                            <Button Grid.Column="1" 
                                    Content="Search" 
                                    Style="{StaticResource SearchButtonStyle}"/>
                        </Grid>
                        
                        <DataGrid Grid.Row="2"
                                  ItemsSource="{Binding Books}"
                                  SelectedItem="{Binding SelectedBook}"
                                  Style="{StaticResource CustomDataGridStyle}"
                                  ColumnWidth="*"                   
                                  HeadersVisibility="Column"
                                  HorizontalScrollBarVisibility="Disabled">

                            <DataGrid.Columns>

                                <!-- ISBN – lebar tetap agar konsisten (13 digit) -->
                                <DataGridTextColumn Header="ISBN"
                                                    Binding="{Binding ISBN}"
                                                    Width="130"
                                                    ElementStyle="{StaticResource CellText}" />

                                <!-- Judul – bobot terbesar -->
                                <DataGridTextColumn Header="Judul"
                                                    Binding="{Binding Title}"
                                                    Width="3*"
                                                    ElementStyle="{StaticResource CellTextTrim}" />

                                <!-- Pengarang – bobot sedang -->
                                <DataGridTextColumn Header="Pengarang"
                                                    Binding="{Binding Author}"
                                                    Width="2*"
                                                    ElementStyle="{StaticResource CellTextTrim}" />

                                <!-- Kategori – bobot kecil -->
                                <DataGridTextColumn Header="Kategori"
                                                    Binding="{Binding Category}"
                                                    Width="1.2*"
                                                    ElementStyle="{StaticResource CellText}" />

                                <!-- Jumlah – lebar tetap, rata-tengah & tebal -->
                                <DataGridTextColumn Header="Jumlah"
                                                    Binding="{Binding Stock}"
                                                    Width="80">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource CellText}">
                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                            <Setter Property="FontWeight"         Value="SemiBold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>
                
                <!-- Book Form -->
                <Border Grid.Column="1" 
                        Background="White" 
                        BorderBrush="#DDDDDD" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Margin="15,0,0,0">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.2" />
                    </Border.Effect>
                    
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <Rectangle Grid.Row="0" Height="5" VerticalAlignment="Top">
                            <Rectangle.Fill>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#3498db" Offset="0"/>
                                    <GradientStop Color="#2980b9" Offset="1"/>
                                </LinearGradientBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                        
                        <ScrollViewer Grid.Row="1" Margin="20" VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <TextBlock Text="{Binding IsEditing, Converter={StaticResource BooleanToStringConverter}, ConverterParameter='Edit Buku;Tambah Buku Baru'}" 
                                           FontWeight="Bold" 
                                           FontSize="18"
                                           Foreground="#333333"
                                           Margin="0,0,0,5"/>
                                
                                <TextBlock Text="Isi detail untuk membuat atau mengedit buku" 
                                           Foreground="#777777" 
                                           FontSize="12" 
                                           Margin="0,0,0,20"/>
                                
                                <TextBlock Text="ISBN" Style="{StaticResource FieldLabelStyle}"/>
                                <TextBox Text="{Binding CurrentBook.ISBN, UpdateSourceTrigger=PropertyChanged}"
                                        Style="{StaticResource FormInputStyle}"/>

                                <TextBlock Text="Judul" Style="{StaticResource FieldLabelStyle}"/>
                                <TextBox Text="{Binding CurrentBook.Title, UpdateSourceTrigger=PropertyChanged}"
                                        Style="{StaticResource FormInputStyle}"/>

                                <TextBlock Text="Pengarang" Style="{StaticResource FieldLabelStyle}"/>
                                <TextBox Text="{Binding CurrentBook.Author, UpdateSourceTrigger=PropertyChanged}"
                                        Style="{StaticResource FormInputStyle}"/>

                                <TextBlock Text="Penerbit" Style="{StaticResource FieldLabelStyle}"/>
                                <TextBox Text="{Binding CurrentBook.Publisher, UpdateSourceTrigger=PropertyChanged}"
                                        Style="{StaticResource FormInputStyle}"/>

                                <TextBlock Text="Tahun Terbit" Style="{StaticResource FieldLabelStyle}"/>
                                <TextBox Text="{Binding CurrentBook.PublicationYear, UpdateSourceTrigger=PropertyChanged}"
                                        Style="{StaticResource FormInputStyle}"/>

                                <TextBlock Text="Kategori" Style="{StaticResource FieldLabelStyle}"/>
                                <TextBox Text="{Binding CurrentBook.Category, UpdateSourceTrigger=PropertyChanged}"
                                        Style="{StaticResource FormInputStyle}"/>

                                <TextBlock Text="Stock" Style="{StaticResource FieldLabelStyle}"/>
                                <TextBox Text="{Binding CurrentBook.Stock, UpdateSourceTrigger=PropertyChanged}"
                                        Style="{StaticResource FormInputStyle}"/>

                                <TextBlock Text="Keterangan" Style="{StaticResource FieldLabelStyle}"/>
                                <TextBox Text="{Binding CurrentBook.Description, UpdateSourceTrigger=PropertyChanged}"
                                        Style="{StaticResource FormInputStyle}"
                                        TextWrapping="Wrap"
                                        AcceptsReturn="True"
                                        Height="80"/>

                                <Button Content="Simpan Buku" 
                                        Command="{Binding SaveCommand}"
                                        Background="#2ecc71"
                                        Style="{StaticResource ActionButtonStyle}"/>
                                
                                <Rectangle Height="1" Fill="#DDDDDD" Margin="0,20,0,20"/>
                                
                                <TextBlock Text="Tindakan" 
                                         FontWeight="Bold" 
                                         FontSize="16"
                                         Foreground="#333333"
                                         Margin="0,0,0,15"/>
                                
                                <Button Content="Tambahkan Buku Baru" 
                                        Command="{Binding AddNewCommand}"
                                        Background="#3498db"
                                        Style="{StaticResource ActionButtonStyle}"/>
                                
                                <Button Content="Hapus Buku yang Dipilih" 
                                        Command="{Binding DeleteCommand}"
                                        Background="#e74c3c"
                                        Style="{StaticResource ActionButtonStyle}"/>
                                
                                <Button Content="Membatalkan" 
                                        Command="{Binding CancelCommand}"
                                        Background="#95a5a6"
                                        Style="{StaticResource ActionButtonStyle}"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>